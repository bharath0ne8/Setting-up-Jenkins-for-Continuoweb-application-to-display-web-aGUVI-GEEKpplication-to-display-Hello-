pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('DockerHub')
        DOCKER_IMAGE_NAME = 'my-web-image'
        DOCKER_IMAGE_TAG = 'latest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Check out your source code from your version control system
                checkout scm
            }
        }
        
        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}")
                    
                    // Log in to Docker Hub using credentials
                    // Log in to Docker Hub using credentials
docker.withRegistry('https://hub.docker.com', 'DockerHubCredentials') {
    // Push the Docker image to Docker Hub
    docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}").push()
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Your Docker image is built and pushed to Docker Hub.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}

